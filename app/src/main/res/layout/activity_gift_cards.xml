<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".GiftCardsActivity">

    <TextView
        android:id="@+id/tituloGiftCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Gift Cards"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/categoriasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Categorías"
        android:backgroundTint="@color/colorButtonNormal"
        android:textColor="@color/colorButtonText"
        app:layout_constraintTop_toBottomOf="@id/tituloGiftCards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/masRelevantesButton" />

    <Button
        android:id="@+id/masRelevantesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Más Relevantes"
        android:backgroundTint="@color/colorButtonNormal"
        android:textColor="@color/colorButtonText"
        app:layout_constraintTop_toBottomOf="@id/tituloGiftCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/categoriasButton" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoriasButton"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Item 1: Adidas -->
            <include
                android:id="@+id/giftCardAdidas"
                layout="@layout/gift_card_item" />

            <!-- Item 2: Nike -->
            <include
                android:id="@+id/giftCardNike"
                layout="@layout/gift_card_item" />

            <!-- Item 3: McDonald's -->
            <include
                android:id="@+id/giftCardMcdonalds"
                layout="@layout/gift_card_item" />

            <!-- Item 4: Burger King -->
            <include
                android:id="@+id/giftCardBurgerKing"
                layout="@layout/gift_card_item" />

            <!-- Item 5: Steam -->
            <include
                android:id="@+id/giftCardSteam"
                layout="@layout/gift_card_item" />

            <!-- Item 6: Cine Hoyts -->
            <include
                android:id="@+id/giftCardCineHoyts"
                layout="@layout/gift_card_item" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
